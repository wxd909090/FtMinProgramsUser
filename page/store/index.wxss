@import "../common/lib/weui.wxss";
@import "../common/index.wxss";

.index {
  font-family: "Arial", "Microsoft YaHei", "黑体", "宋体", sans-serif;
  background-color: #fff;
}

page {
  background-color: #fff;
}

button {
  margin-top: 0rpx;
  margin-bottom: 0rpx;
}

.body-head {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  background: #000;
  height: auto;
  z-index: 900;
}

.head-search {
  /*margin-top: 6px;*/
  margin: 7px 5px 0px 10px;
  height: 38px;
  /*background-color: #838B83;*/
}

.index-bd {
  /*padding: 50px 0px 30px 0px;*/
  padding: 0px;
  background-color: #fff;
}

.topTohead {
  margin-top: 8em;
}

.region {
  width: 24%;
  line-height: 29px;
  float: left;
  text-align: center;
  /*color: #fff;*//*border: 2px solid #808080;*/
  background: #fff;
  border-radius: 20px;
}

.textPicker {
  font-size: 0.8em;
}

.serarch {
  margin-left: 10px;
  width: 72%;
  height: 30px;
  float: left;
  /*background-color: #836FFF;*/
}

.serarch_view {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  /*background-color: #efeff4;*/
  border-radius: 20px;
  background-color: #fff;
}

.serarch_view text {
  margin-left: 1%;
  font-size: 0.9em;
  color: #696969;
  line-height: 30px;
}

.search-input {
  width: 100%;
  height: 30px;
  /*display: inline-block;*//*-webkit-appearance: none;*//*border-radius: 1px;*//*font-family: inherit;*/
  color: #3d4145;
  font-size: 0.9em;
  font-weight: normal;
  padding: 0 5px;
  background-color: #fff;
  /*border: 1px solid #04be02;*/
  border: 1px solid #fff;
  /*opacity: 0.9;*//*box-sizing:content-box;*/
  text-align: left;
  border-radius: 20px;
}

.search-icon {
  float: left;
  margin: 4px 5px 0px 6px;
}

.search_icon_view {
  background-color: #1aad19;
  width: 70px;
  text-align: center;
}


/*mystyle*/
.film_cell{
  width:100%;
  height:170rpx;
  padding:10rpx 0;
  border-bottom:1px solid #ddd;
  position:fixed;
  top:0;
  background:#eeeeee;
}
.blankView{
  height: 190rpx;
}
.filmLeft{
  float: left;
  width:20%;
  height: 100%;
  margin-left:2%;
}
.filmCenter{
  float: left;
  width:60%;
  font-size:12px;
  text-indent:25rpx;
}
.filmRight{
  float: left;
  width:18%;
  height:100%;
  line-height: 170rpx;
  text-align: center;
}
.protagonist_show{
  width:100%;
  word-break:keep-all;             
  white-space:nowrap;           
  overflow:hidden;                 
  text-overflow:ellipsis;           
}
.film_name_show{
  line-height: 45rpx;
  font-size:14px;
  font-weight: 600;
}
.protagonist_show{
  line-height: 42.5rpx;
  color:rgb(136, 136, 136);
}
.grade_show{
  line-height: 42.5rpx;
  color:rgb(136, 136, 136);
}
.gradeNum{
  display:inline;
  color:rgb(247, 186, 42);
  font-weight: 600;
  text-indent: 5rpx;
  font-size:14px;
}
.director_show{
  line-height: 42.5rpx;
  color:rgb(136, 136, 136);
  width:100%;
  word-break:keep-all;             
  white-space:nowrap;           
  overflow:hidden;                 
  text-overflow:ellipsis; 
}
.closeBtn{
  width:30px;
  height:30px;
}
.filmImg{
  width:100%;
  height:100%
}






.store_list{
  margin:0 auto;
}
.store_row1{
  font-size:16px;
  overflow: hidden;
}
.store_row2{
  clear:both;
}
.store_cell{
  padding:3% 0;
  border-bottom:1px solid #ddd;
}
.store_name{
  margin-left: 2%;
  float:left;
  color:#5fbe51;
  text-decoration: underline;
}
.address{
  margin-left: 2%;
  font-size:12px;
  margin-top:4px;
  color:rgb(136, 136, 136);
}
.distance{
  float:right;
  margin-right:3%;
}
.localInfoImg{
  width:35px;
  height:35px;
}
.orderBtn{
  font-size:12px;
  background-color:#5fbe51;
  color:#fff;
  padding:4px 10px;
  text-align:center;
  border-radius:2px;
  float:right;
  margin-right:3%;
}
.activity{
  font-size:10px;
  color:rgb(136, 136, 136);
  margin-top:4px;
}
.activityName{
  margin-left:2%;
  font-size:10px;
  color:#fff;
  padding:2px;
  background-color: rgb(247, 186, 42);
  display: inline-block;
  line-height: 100%;
  font-weight: 100;
  margin-right:4px;
}
.stopBusiness{
  color:rgb(136,136,136);
}


