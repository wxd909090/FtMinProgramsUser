@import "../common/lib/weui.wxss";
@import "../common/index.wxss";
@import "/component/msgTitle/msgTitle.wxss";
.templateView{
  width:100%;
  height:202rpx;
  border-bottom:2rpx solid #ebebeb;
  box-sizing:border-box;
}
.templateView .selectedView{
  display:inline-block;
  width:72rpx;
  height:200rpx;
  text-align:center;
  line-height:200rpx;
  position:relative;
  float:left;
}
.templateView .selectedView .selectedViewPic{
  position:absolute;
  display:inline-block;
  width:37rpx;
  height:37rpx;
  top:50%;
  left:50%;
  margin-top:-18.5rpx;
  margin-left:-18.5rpx;
}
.templateView .contentView{
  display:inline-block;
  width:658rpx;
  height:200rpx;
  text-align:center;
  line-height:200rpx;
  margin-right:20rpx;
}

.templateView .contentView .mainPic{
  display:inline-block;
  float:left;
  width:146rpx;
  height:200rpx;
  text-align:center;
  line-height:200rpx;
  margin-right:22rpx;
  
}
.templateView .contentView .mainPic .mainPicImage{
  display:block;
  width:146rpx;
  height:162rpx;
  margin-top:19rpx;
  border:1rpx solid #cac9c9;
  box-sizing:border-box;
}
.templateView .contentView .mainText{
  display:inline-block;
  float:left;
  width:490rpx;
  height:200rpx;
  text-align:center;
}
.templateView .contentView .mainText{
  display:inline-block;
  width:490rpx;
  height:181rpx;
  text-align:center;
  margin-top:19rpx;
  box-sizing:border-box;
}
.templateView .contentView .mainText .mainText_three{
  display:block;
  width:490rpx;
  height:40rpx;
  text-align:center;
  /* margin-top:40rpx; */
}
.templateView .contentView .mainText .mainText_three .mainText_three_rig{
  display:block;
  float:right;
  height:40rpx;
  line-height:40rpx;
}
.templateView .contentView .mainText .mainText_three .mainText_three_rig image:nth-child(3){
  display:block;
  float:right;
  width:40rpx;
  height:40rpx;
  line-height:40rpx;
}
.templateView .contentView .mainText .mainText_three .mainText_three_rig text:nth-child(2){
  display:block;
  float:right;
  width:55rpx;
  height:40rpx;
  line-height:40rpx;
  font-size:24rpx;
  color:#4bb73b;
}
.templateView .contentView .mainText .mainText_three .mainText_three_rig image:nth-child(1){
  display:block;
  float:right;
  width:40rpx;
  height:40rpx;
  line-height:40rpx;
}
.templateView .contentView .mainText .mainText_three .mainText_three_lef{
  display:block;
  float:left;
  height:40rpx;
  line-height:40rpx;
}
.templateView .contentView .mainText .mainText_three .mainText_three_lef text:nth-child(1){
  display:block;
  float:left;
  height:40rpx;
  line-height:40rpx;
  font-size:25rpx;
  color:#ffd427;
  margin-right:33rpx;
}
.templateView .contentView .mainText .mainText_three .mainText_three_lef text:nth-child(2){
  display:block;
  float:left;
  height:40rpx;
  line-height:40rpx;
  font-size:16rpx;
  color:#9d9d9d;
  text-decoration: line-through;
}

.templateView .contentView .mainText .mainText_two{
  display:block;
  width:490rpx;
  height:80rpx;
  text-align:center;
  overflow: hidden;
}
.templateView .contentView .mainText .mainText_two text{
  display:block;
  width:490rpx;
  height:40rpx;
  line-height:40rpx;
  text-align:left;
  color:#a4a4a4;
  font-size:20rpx;
}
.templateView .contentView .mainText .mainText_one{
  display:block;
  width:490rpx;
  height:36rpx;
  text-align:center;
}
.templateView .contentView .mainText .mainText_one .mainText_one_lef{
  display:block;
  float:left;
  height:36rpx;
  line-height:36rpx;
  text-align:center;
  font-size:24rpx;
  white-space:nowrap; 
  font-weight:bold;
  margin-right:13rpx;
}
.templateView .contentView .mainText .mainText_one .mainText_one_rig{
  display:block;
  float:left;
  height:36rpx;
  text-align:center;
  font-size:24rpx;
  line-height:36rpx;
  color:#fff;
  background:#ffd427;
  padding: 0 4rpx;
}


.viewButton{
  position:fixed;
  bottom:0rpx;
  width:100%;
  height:92rpx;
  background:#44b434;
  line-height:92rpx;
