/* mineNav_one */
.mineNav_one{
  width:100%;
  height:70rpx;
  background:#fff;
  padding:36rpx 0rpx;
}
.mineNav_one .mineNav_one_view{
  width:25%;
  height:70rpx;

  line-height:70rpx;
  border-right:2rpx solid #e2e1e1;
  box-sizing:border-box;
  float:left;
}
.page-section{
    margin-bottom: 0 !important;
}
.mineNav_one .mineNav_one_view .mineNav_one_view_image{
  display:block;
  width:100%;
  height:33rpx;
  line-height:33rpx;
  position:relative;
}
.mineNav_one .mineNav_one_view .mineNav_one_view_image image{
  display:block;
  position:absolute;
  width:35rpx;
  height:32rpx;
  top:50%;
  left:50%;
  margin-top:-16rpx;
  margin-left:-17.5rpx;
}
.mineNav_one .mineNav_one_view .mineNav_one_view_txt{
  display:block;
  width:100%;
  height:37rpx;
  position:relative;
}
.mineNav_one .mineNav_one_view .mineNav_one_view_txt text{
  display:block;
  width:100%;
  height:24rpx;
  text-align:center;
  line-height:24rpx;
  font-size:24rpx;
  color:#171717;
  position:absolute;
  bottom:0rpx;
  left:0rpx;
}
.mineNav_one .mineNav_one_view:nth-child(4){
  border-right:0rpx; 
}
.interval_view{
  width:100%;
  height:20rpx;
  background:#f3f3f4;
}
.weui-cells::before{
  border-top:0rpx;            
}
.noBottom{
  border-bottom:0rpx;                 
}
