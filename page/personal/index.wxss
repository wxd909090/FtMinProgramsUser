@import "../common/lib/weui.wxss";
@import "../common/index.wxss";

.container {
  font-family: "Arial", "Microsoft YaHei", "黑体", "宋体", sans-serif;
  padding: 0px;
}

.head {
  width: 100%;
  padding: 20rpx 0;
  border-bottom: 0.5px solid #d9d9d9;
  background-color: #5fbe51;
  color: #fff;
  overflow: hidden;
}

.avatar {
  font-size:0;
  border-radius:50%;
  text-align: center;
}

.avatar image {
  width:80px;
  height:80px;
  border:3px solid #fff;
  border-radius:50%;
}

.text_view {
  width: 50%;
  height: 100px;
